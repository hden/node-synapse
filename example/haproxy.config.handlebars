global
  maxconn 256
  # Exposes the stat socket so we can manage the proxy through synapse
  stats socket {{socket}} level admin

defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms
    retries 3
    option redispatch

listen stats
    bind *:9999
    mode http
    stats enable
    stats uri /
    stats refresh 2s

listen http-in
    bind *:8080
    balance roundrobin
    option http-server-close

{{#each roles}}
backend {{role}}
  balance roundrobin
  option http-server-close
  {{#each server}}server {{name}} {{address}} weight 1 maxconn 512
  {{/each}}
{{/each}}
